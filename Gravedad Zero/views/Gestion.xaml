<Window
    x:Class="Gravedad_Zero.views.Gestion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Gravedad_Zero.views"
    mc:Ignorable="d"
    xmlns:views="clr-namespace:Gravedad_Zero.views"
    Title="Gestion"
    Height="450"
    Width="800">

    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Bonos Usuarios"/>
                    </StackPanel>
                </TabItem.Header>
                <!--Contenido Vista Usuarios-->
                <views:GestionBonosUsuarios>
                    </views:GestionBonosUsuarios>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Noticias"/>
                    </StackPanel>
                </TabItem.Header>
                <!--Contenido Vista Noticias-->
                <views:GestionNoticia>
                </views:GestionNoticia>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
